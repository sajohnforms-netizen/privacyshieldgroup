<style>
:root {
  --navy-deep: #050c18;
  --navy: #0b1a30;
  --navy-mid: #122240;
  --navy-soft: #1a2d4e;
  --gold: #c4a265;
  --gold-light: #d6bb88;
  --gold-pale: #e8dbc0;
  --gold-dark: #a68740;
  --gold-glow: rgba(196,162,101,0.10);
  --gold-glow-strong: rgba(196,162,101,0.18);
  --white: #ffffff;
  --off-white: #fbfaf8;
  --cream: #f6f3ee;
  --warm-gray: #f0ede7;
  --gray-100: #e8e4dd;
  --gray-200: #d1ccc3;
  --gray-300: #b5afa5;
  --gray-400: #8c867c;
  --gray-500: #6b655b;
  --gray-600: #4a4640;
  --gray-700: #2e2b27;
  --soft-green: #3a8a4a;
  --soft-green-bg: #f2f9f3;
  --font-display: 'Cormorant Garamond', Georgia, 'Times New Roman', serif;
  --font-body: 'Inter', -apple-system, system-ui, sans-serif;
  --shadow-subtle: 0 2px 12px rgba(6,13,26,0.04);
  --shadow-soft: 0 4px 24px rgba(6,13,26,0.06);
  --shadow-lift: 0 12px 40px rgba(6,13,26,0.08);
  --shadow-gold: 0 8px 36px rgba(196,162,101,0.14);
  --radius: 12px;
  --radius-lg: 20px;
}

*, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }
html { scroll-behavior: smooth; -webkit-font-smoothing: antialiased; }

body {
  font-family: var(--font-body);
  color: var(--gray-600);
  line-height: 1.75;
  overflow-x: hidden;
  background: var(--white);
}

.container { max-width: 1100px; margin: 0 auto; padding: 0 32px; }

/* ===== NAVIGATION ===== */
.nav { position: absolute; top: 0; left: 0; right: 0; z-index: 100; padding: 36px 0; }
.nav .container { display: flex; justify-content: space-between; align-items: center; }
.logo-mark { display: flex; align-items: center; gap: 14px; text-decoration: none; }
.logo-shield { width: 38px; height: 38px; display: flex; align-items: center; justify-content: center; }
.logo-shield svg { width: 100%; height: 100%; }
.logo-text { font-family: var(--font-display); font-size: 20px; font-weight: 600; color: var(--white); letter-spacing: 0.5px; }
.logo-text span { color: var(--gold); }
.nav-links { display: flex; align-items: center; gap: 32px; }
.nav-links a { font-size: 13px; font-weight: 500; color: rgba(255,255,255,0.55); text-decoration: none; letter-spacing: 0.3px; transition: color 0.3s; }
.nav-links a:hover { color: var(--gold-light); }
.nav-cta { border: 1.5px solid rgba(196,162,101,0.5); color: var(--gold) !important; padding: 9px 26px; border-radius: 6px; font-size: 12px !important; font-weight: 600 !important; letter-spacing: 1.5px; text-transform: uppercase; transition: all 0.3s; }
.nav-cta:hover { background: var(--gold); color: var(--navy) !important; border-color: var(--gold); }

/* ===== HERO ===== */
.hero { background: var(--navy); color: var(--white); min-height: 100vh; display: flex; align-items: center; position: relative; overflow: hidden; }
.hero::before { content: ''; position: absolute; top: -25%; right: -12%; width: 900px; height: 900px; background: radial-gradient(circle, rgba(196,162,101,0.05) 0%, transparent 60%); border-radius: 50%; }
.hero::after { content: ''; position: absolute; bottom: -15%; left: -8%; width: 500px; height: 500px; background: radial-gradient(circle, rgba(196,162,101,0.03) 0%, transparent 60%); border-radius: 50%; }
.hero-deco { position: absolute; top: 0; left: 50%; width: 1px; height: 140px; background: linear-gradient(to bottom, transparent, rgba(196,162,101,0.25), transparent); }
.hero-content { position: relative; z-index: 2; padding: 180px 0 100px; display: grid; grid-template-columns: 1fr 1fr; gap: 60px; align-items: center; }
.hero-eyebrow { display: inline-flex; align-items: center; gap: 10px; font-size: 11px; font-weight: 600; letter-spacing: 3px; text-transform: uppercase; color: var(--gold); margin-bottom: 36px; }
.hero-eyebrow::before { content: ''; width: 24px; height: 1px; background: var(--gold); }
.hero h1 { font-family: var(--font-display); font-size: clamp(38px, 4.5vw, 64px); font-weight: 500; line-height: 1.12; margin-bottom: 28px; letter-spacing: -0.3px; }
.hero h1 em { font-style: italic; color: var(--gold); }
.hero-sub { font-size: 17px; line-height: 1.85; color: var(--gray-300); max-width: 520px; margin-bottom: 44px; font-weight: 300; }
.hero-actions { display: flex; align-items: center; gap: 24px; }
.btn-primary { display: inline-block; background: var(--gold); color: var(--navy); padding: 15px 38px; border-radius: 6px; font-size: 13px; font-weight: 700; text-decoration: none; text-transform: uppercase; letter-spacing: 1.5px; transition: all 0.35s; }
.btn-primary:hover { background: var(--gold-light); transform: translateY(-2px); box-shadow: var(--shadow-gold); }
.btn-ghost { display: inline-flex; align-items: center; gap: 8px; color: var(--gray-300); font-size: 14px; font-weight: 400; text-decoration: none; transition: color 0.3s; letter-spacing: 0.2px; }
.btn-ghost:hover { color: var(--gold-light); }

/* Hero badge */
.hero-right { display: flex; justify-content: center; align-items: center; }
.hero-badge-wrap { position: relative; width: 380px; height: 380px; display: flex; align-items: center; justify-content: center; }
.badge-ring-outer { position: absolute; inset: 0; border-radius: 50%; border: 1px solid rgba(196,162,101,0.08); animation: rotateRing 60s linear infinite; }
.badge-ring-outer::before { content: ''; position: absolute; top: -3px; left: 50%; width: 6px; height: 6px; border-radius: 50%; background: var(--gold); opacity: 0.4; }

@keyframes rotateRing { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }
@keyframes rotateRingReverse { from { transform: rotate(360deg); } to { transform: rotate(0deg); } }
@keyframes pulseGlow { 0%, 100% { opacity: 0.15; transform: scale(1); } 50% { opacity: 0.35; transform: scale(1.08); } }
@keyframes floatParticle1 { 0%, 100% { transform: translate(0, 0) scale(1); opacity: 0.6; } 25% { transform: translate(12px, -18px) scale(1.3); opacity: 1; } 50% { transform: translate(-8px, -30px) scale(0.8); opacity: 0.4; } 75% { transform: translate(16px, -12px) scale(1.1); opacity: 0.8; } }
@keyframes floatParticle2 { 0%, 100% { transform: translate(0, 0) scale(1); opacity: 0.4; } 33% { transform: translate(-15px, -20px) scale(1.4); opacity: 0.9; } 66% { transform: translate(10px, -25px) scale(0.7); opacity: 0.3; } }
@keyframes floatParticle3 { 0%, 100% { transform: translate(0, 0); opacity: 0.5; } 50% { transform: translate(20px, -15px); opacity: 1; } }
@keyframes shimmer { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
@keyframes badgePulse { 0%, 100% { filter: drop-shadow(0 4px 24px rgba(196,162,101,0.15)); } 50% { filter: drop-shadow(0 4px 40px rgba(196,162,101,0.35)); } }

.badge-ring-mid { position: absolute; inset: 24px; border-radius: 50%; border: 1px solid rgba(196,162,101,0.12); animation: rotateRingReverse 45s linear infinite; }
.badge-ring-mid::before { content: ''; position: absolute; bottom: -3px; left: 50%; width: 5px; height: 5px; border-radius: 50%; background: var(--gold-light); opacity: 0.3; }
.badge-ring-inner { position: absolute; inset: 44px; border-radius: 50%; border: 1px dashed rgba(196,162,101,0.08); animation: rotateRing 90s linear infinite; }
.badge-glow { position: absolute; inset: 20px; border-radius: 50%; background: radial-gradient(circle, rgba(196,162,101,0.12) 0%, transparent 65%); animation: pulseGlow 4s ease-in-out infinite; pointer-events: none; }

.badge-particle { position: absolute; width: 4px; height: 4px; border-radius: 50%; background: var(--gold); pointer-events: none; }
.badge-particle:nth-child(1) { top: 15%; right: 12%; animation: floatParticle1 6s ease-in-out infinite; }
.badge-particle:nth-child(2) { bottom: 20%; left: 10%; width: 3px; height: 3px; animation: floatParticle2 8s ease-in-out infinite 1s; }
.badge-particle:nth-child(3) { top: 45%; right: 5%; width: 2px; height: 2px; animation: floatParticle3 5s ease-in-out infinite 0.5s; }
.badge-particle:nth-child(4) { bottom: 12%; right: 20%; width: 3px; height: 3px; animation: floatParticle1 7s ease-in-out infinite 2s; }
.badge-particle:nth-child(5) { top: 20%; left: 15%; width: 2px; height: 2px; animation: floatParticle2 9s ease-in-out infinite 3s; }
.badge-particle:nth-child(6) { bottom: 35%; left: 5%; width: 3px; height: 3px; opacity: 0.5; animation: floatParticle3 6s ease-in-out infinite 1.5s; }

.badge-shimmer { position: absolute; inset: 10px; border-radius: 50%; overflow: hidden; pointer-events: none; }
.badge-shimmer::before { content: ''; position: absolute; top: -50%; left: -50%; width: 200%; height: 200%; background: conic-gradient(from 0deg, transparent 0%, transparent 85%, rgba(196,162,101,0.12) 90%, transparent 95%, transparent 100%); animation: shimmer 8s linear infinite; }

.hero-badge-main { width: 300px; height: 300px; position: relative; display: flex; align-items: center; justify-content: center; }
.hero-badge-main svg { width: 100%; height: 100%; animation: badgePulse 4s ease-in-out infinite; }

/* ===== SECTIONS SHARED ===== */
.section { padding: 120px 0; }
.section-dark { background: var(--navy); color: var(--white); }
.section-cream { background: var(--cream); }
.section-off-white { background: var(--off-white); }

.section-eyebrow { display: inline-flex; align-items: center; gap: 12px; font-size: 11px; font-weight: 700; letter-spacing: 2.5px; text-transform: uppercase; color: var(--gold-dark); margin-bottom: 24px; }
.section-eyebrow::before { content: ''; width: 32px; height: 1.5px; background: var(--gold); }
.section-dark .section-eyebrow { color: var(--gold); }

.section-title { font-family: var(--font-display); font-size: clamp(30px, 3.5vw, 48px); font-weight: 500; color: var(--navy); line-height: 1.15; margin-bottom: 20px; letter-spacing: -0.2px; }
.section-dark .section-title { color: var(--white); }
.text-gold { color: var(--gold); }

.section-subtitle { font-size: 17px; color: var(--gray-500); max-width: 620px; line-height: 1.85; margin-bottom: 64px; font-weight: 300; }
.section-dark .section-subtitle { color: var(--gray-300); }

/* ===== WAAROM / WHY ===== */
.waarom-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 28px; margin-bottom: 56px; }
.waarom-card { background: var(--white); border: 1px solid var(--gray-100); border-radius: var(--radius-lg); padding: 44px 36px; transition: all 0.4s; position: relative; overflow: hidden; }
.waarom-card::before { content: ''; position: absolute; top: 0; left: 0; right: 0; height: 3px; background: linear-gradient(90deg, var(--gold), var(--gold-light)); opacity: 0; transition: opacity 0.4s; }
.waarom-card:hover { border-color: var(--gold); box-shadow: var(--shadow-soft); transform: translateY(-4px); }
.waarom-card:hover::before { opacity: 1; }
.waarom-icon { width: 56px; height: 56px; border-radius: 14px; background: var(--gold-glow); border: 1px solid rgba(196,162,101,0.15); display: flex; align-items: center; justify-content: center; font-size: 24px; margin-bottom: 28px; }
.waarom-card h3 { font-family: var(--font-display); font-size: 24px; font-weight: 600; color: var(--navy); margin-bottom: 14px; line-height: 1.25; }
.waarom-card p { font-size: 15px; color: var(--gray-500); line-height: 1.8; }
.waarom-footer { text-align: center; padding-top: 40px; border-top: 1px solid var(--gray-100); }
.waarom-footer p { font-family: var(--font-display); font-size: 22px; font-weight: 500; font-style: italic; color: var(--gray-500); max-width: 680px; margin: 0 auto; line-height: 1.5; }

/* ===== CERTIFICATE ===== */
.cert-layout { display: grid; grid-template-columns: 1fr 1fr; gap: 80px; align-items: center; }
.cert-text h3 { font-family: var(--font-display); font-size: 30px; font-weight: 600; color: var(--white); margin-bottom: 20px; line-height: 1.25; }
.cert-text p { font-size: 15px; color: var(--gray-300); line-height: 1.85; margin-bottom: 20px; }
.cert-features { display: flex; flex-direction: column; gap: 14px; margin-top: 36px; }
.cert-feature { display: flex; align-items: center; gap: 16px; padding: 14px 20px; background: rgba(255,255,255,0.025); border: 1px solid rgba(255,255,255,0.05); border-radius: 10px; transition: all 0.3s; }
.cert-feature:hover { border-color: rgba(196,162,101,0.3); background: rgba(196,162,101,0.04); }
.cert-feature-dot { flex-shrink: 0; width: 8px; height: 8px; border-radius: 50%; background: var(--gold); }
.cert-feature-text { font-size: 15px; font-weight: 400; color: var(--gray-200); }

.cert-badge-area { display: flex; justify-content: center; align-items: center; }
.cert-badge-showcase { position: relative; width: 340px; height: 340px; display: flex; align-items: center; justify-content: center; }
.cert-badge-showcase svg { width: 100%; height: 100%; animation: badgePulse 5s ease-in-out infinite 1s; }
.cert-glow { position: absolute; inset: -40px; border-radius: 50%; background: radial-gradient(circle, rgba(196,162,101,0.06) 0%, transparent 65%); pointer-events: none; }

/* ===== VOORDELEN / BENEFITS ===== */
.voordelen-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 28px; }
.voordeel-card { background: var(--white); border: 1px solid var(--gray-100); border-radius: var(--radius-lg); padding: 44px; transition: all 0.4s; position: relative; }
.voordeel-card:hover { border-color: var(--gold); box-shadow: var(--shadow-soft); transform: translateY(-3px); }
.voordeel-tag { display: inline-block; font-size: 10px; font-weight: 700; letter-spacing: 2px; text-transform: uppercase; padding: 4px 12px; border-radius: 4px; margin-bottom: 20px; }
.voordeel-tag.marketing { background: #eef4ff; color: #3b6fc0; }
.voordeel-tag.trust { background: var(--soft-green-bg); color: var(--soft-green); }
.voordeel-tag.value { background: #fef6ee; color: #b47a20; }
.voordeel-tag.compliance { background: #f3eeff; color: #6b3fa0; }
.voordeel-card h3 { font-family: var(--font-display); font-size: 24px; font-weight: 600; color: var(--navy); margin-bottom: 14px; line-height: 1.25; }
.voordeel-card p { font-size: 15px; color: var(--gray-500); line-height: 1.8; }
.voordeel-list { list-style: none; margin-top: 20px; }
.voordeel-list li { font-size: 14px; color: var(--gray-500); padding: 7px 0 7px 20px; position: relative; line-height: 1.6; }
.voordeel-list li::before { content: ''; position: absolute; left: 0; top: 15px; width: 6px; height: 6px; border-radius: 50%; background: var(--gold); }

/* ===== TRAINING ===== */
.training-layout { display: grid; grid-template-columns: 1fr 1fr; gap: 72px; align-items: start; }
.training-intro h3 { font-family: var(--font-display); font-size: 30px; font-weight: 600; color: var(--navy); margin-bottom: 20px; line-height: 1.25; }
.training-intro p { font-size: 16px; color: var(--gray-500); line-height: 1.85; margin-bottom: 24px; }
.training-quote { background: var(--gold-glow); border-left: 3px solid var(--gold); padding: 24px 28px; border-radius: 0 var(--radius) var(--radius) 0; margin: 28px 0; }
.training-quote p { font-family: var(--font-display); font-size: 20px; font-weight: 500; font-style: italic; color: var(--gray-600); margin-bottom: 0; line-height: 1.5; }
.training-modules { display: flex; flex-direction: column; gap: 16px; }
.t-module { background: var(--white); border: 1px solid var(--gray-100); border-radius: var(--radius); padding: 28px 32px; display: flex; align-items: flex-start; gap: 20px; transition: all 0.35s; }
.t-module:hover { border-color: var(--gold); box-shadow: var(--shadow-subtle); }
.t-module-icon { flex-shrink: 0; width: 44px; height: 44px; border-radius: 50%; background: var(--gold-glow); border: 1px solid rgba(196,162,101,0.2); display: flex; align-items: center; justify-content: center; font-family: var(--font-display); font-size: 20px; font-weight: 600; color: var(--gold-dark); }
.t-module h4 { font-size: 16px; font-weight: 600; color: var(--navy); margin-bottom: 4px; }
.t-module p { font-size: 14px; color: var(--gray-500); line-height: 1.65; }

/* ===== PROCESS ===== */
.process-steps { display: grid; grid-template-columns: repeat(4, 1fr); gap: 0; position: relative; }
.process-steps::before { content: ''; position: absolute; top: 44px; left: 12.5%; right: 12.5%; height: 1px; background: rgba(255,255,255,0.08); }
.p-step { text-align: center; padding: 0 20px; position: relative; }
.p-step-circle { width: 88px; height: 88px; border-radius: 50%; background: rgba(196,162,101,0.06); border: 1.5px solid rgba(196,162,101,0.25); display: flex; align-items: center; justify-content: center; margin: 0 auto 28px; position: relative; z-index: 2; transition: all 0.3s; }
.p-step:hover .p-step-circle { border-color: var(--gold); background: rgba(196,162,101,0.1); }
.p-step-num { font-family: var(--font-display); font-size: 30px; font-weight: 600; color: var(--gold); }
.p-step h4 { font-family: var(--font-display); font-size: 22px; font-weight: 600; color: var(--white); margin-bottom: 12px; }
.p-step p { font-size: 14px; color: var(--gray-400); line-height: 1.7; }

/* ===== INSURANCE ===== */
.vl-layout { display: grid; grid-template-columns: 1fr 1fr; gap: 48px; align-items: start; }
.vl-card { background: var(--white); border: 1px solid var(--gray-100); border-radius: var(--radius-lg); padding: 48px; transition: all 0.35s; }
.vl-card:hover { border-color: var(--gold); box-shadow: var(--shadow-soft); }
.vl-card h3 { font-family: var(--font-display); font-size: 26px; font-weight: 600; color: var(--navy); margin-bottom: 16px; line-height: 1.25; }
.vl-card p { font-size: 15px; color: var(--gray-500); line-height: 1.8; margin-bottom: 16px; }
.vl-card p:last-child { margin-bottom: 0; }
.vl-accent { font-family: var(--font-display); font-size: 18px; font-weight: 600; font-style: italic; color: var(--gold-dark) !important; }

/* ===== POSITIONING ===== */
.positioning-content { text-align: center; max-width: 720px; margin: 0 auto; }
.positioning-content .section-subtitle { margin-left: auto; margin-right: auto; }
.pos-features { display: grid; grid-template-columns: repeat(3, 1fr); gap: 28px; margin: 48px 0; }
.pos-feat { padding: 40px 28px; background: rgba(255,255,255,0.025); border: 1px solid rgba(255,255,255,0.05); border-radius: var(--radius); text-align: center; transition: all 0.3s; }
.pos-feat:hover { border-color: rgba(196,162,101,0.2); background: rgba(196,162,101,0.03); }
.pos-feat-icon { font-size: 28px; margin-bottom: 18px; opacity: 0.85; }
.pos-feat h4 { font-family: var(--font-display); font-size: 20px; font-weight: 600; color: var(--white); margin-bottom: 10px; }
.pos-feat p { font-size: 14px; color: var(--gray-400); line-height: 1.7; }
.positioning-quote { font-family: var(--font-display); font-size: 24px; font-weight: 500; font-style: italic; color: var(--gold-light); line-height: 1.45; margin: 56px 0 0; padding-top: 48px; border-top: 1px solid rgba(255,255,255,0.06); }

/* ===== CTA ===== */
.cta-section { padding: 120px 0; background: linear-gradient(170deg, var(--navy) 0%, var(--navy-mid) 100%); text-align: center; color: var(--white); position: relative; overflow: hidden; }
.cta-section::before { content: ''; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 700px; height: 700px; background: radial-gradient(circle, rgba(196,162,101,0.04) 0%, transparent 55%); border-radius: 50%; }
.cta-content { position: relative; z-index: 2; }
.cta-badge-mini { width: 80px; height: 80px; margin: 0 auto 32px; opacity: 0.6; }
.cta-badge-mini svg { width: 100%; height: 100%; }
.cta-content h2 { font-family: var(--font-display); font-size: clamp(30px, 4vw, 48px); font-weight: 500; margin-bottom: 20px; line-height: 1.15; }
.cta-content p { font-size: 17px; color: var(--gray-300); max-width: 500px; margin: 0 auto 44px; line-height: 1.85; font-weight: 300; }
.cta-actions { display: flex; flex-direction: column; align-items: center; gap: 16px; }
.cta-phone { font-size: 14px; color: var(--gray-400); }
.cta-phone a { color: var(--gold-light); text-decoration: none; font-weight: 500; }
.cta-phone a:hover { text-decoration: underline; }

/* ===== FOOTER ===== */
footer { background: var(--navy-deep); color: var(--gray-400); padding: 56px 0 36px; font-size: 13px; }
.footer-upper { display: grid; grid-template-columns: 2fr 1fr 1fr; gap: 48px; margin-bottom: 40px; padding-bottom: 40px; border-bottom: 1px solid rgba(255,255,255,0.04); }
.footer-brand-text { font-family: var(--font-display); font-size: 20px; font-weight: 600; color: var(--white); margin-bottom: 14px; }
.footer-brand-text span { color: var(--gold); }
.footer-desc { font-size: 13px; color: var(--gray-400); line-height: 1.7; max-width: 340px; }
.footer-col h5 { font-size: 11px; font-weight: 700; color: var(--gray-200); letter-spacing: 2px; text-transform: uppercase; margin-bottom: 16px; }
.footer-col a { display: block; font-size: 13px; color: var(--gray-400); text-decoration: none; padding: 4px 0; transition: color 0.2s; }
.footer-col a:hover { color: var(--gold); }
